<!--pages/checkIn/calendar/calendar.wxml-->
<view wx:if="{{calendar}}" class="container">
  <viwe class="">
    <picker fields="month" mode="date" bindchange="setTime">{{sCalendar}}</picker>
  </viwe>
  <view class="{{mCls}}">
    <view class="calendar-line {{line.cls}}" wx:for="{{calendar}}" wx:key="line-{{i}}" wx:for-item="line" wx:for-index="i">
      <view wx:for="{{line.list}}" wx:for-index="j" wx:for-item="date" wx:key="c-{{i}}-{{j}}"
            class="calendar-date {{date.cls}} {{date.select && 'date-select'}}" data-date="{{date.value}}"
            bindtap="changeSelectedDay"
      >{{date.value}}<view class="point {{date.pCls}}"></view></view>
    </view>
  </view>
  <view class="log-list">
    <view class="log-item" wx:for="{{logList}}" wx:key="log-{{index}}">
      <text>{{item.t}}</text>
      <text class="pl_50">{{item.r}}</text>
    </view>
  </view>
</view>
