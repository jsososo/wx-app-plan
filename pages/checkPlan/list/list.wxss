/* pages/list/list.wxss */
.container {
  padding-bottom: 150rpx;
}

.empty-text {
  line-height: 60rpx;
  color: #777;
  font-weight: 900;
  text-align: center;
  margin-top: 40rpx;
}

.item-box {
  display: inline-block;
  width: 33.3%;
  vertical-align: top;
}

.item-icon {
  width: 90rpx;
  height: 90rpx;
  margin: 40rpx 80rpx 6rpx 80rpx;
}

.item-title {
  text-align: center;
  margin: 0 auto;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  padding: 0 30rpx;
  text-overflow: ellipsis;
}


.target-text {
  float: right;
  font-size: 28rpx;
}

.item-index {
  width: 70rpx;
}
.check-dialog-container {
  top: 0;
  left: 0;
  position: fixed;
  z-index: 99;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.3);
}

.check-dialog {
  position:relative;
  top:15%;
  left:10%;
  width:60%;
  background:white;
  border:1px solid #eaeaea;
  border-radius:20rpx;
  box-shadow:0 0 20px #ccc;
  padding:10%;
}

textarea {
  margin-top: 20rpx;
  border: 1px solid #eaeaea;
  border-radius: 20rpx;
  width: calc(100% - 50rpx);
  padding: 25rpx;
}

.check-btn {
  margin-top: 80rpx;
  bottom: 50rpx;
  background: #3089DC;
  border-radius: 20rpx;
  width: 100%;
  color: white;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}

.icon-close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.add-new {
  border: 1px dashed #3089DC;
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  margin: 40rpx 65rpx;
  color: #3089DC;
  font-size: 60rpx;
  box-sizing: border-box;
}

.sub-title {
  font-size: 30rpx;
  color: #666;
  margin-left: 30rpx;
  padding-left: 20rpx;
  border-left: 3px solid #3089DC;
}

.add-new-first {
  background: #3089DC;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  width: 80%;
  margin: 40rpx auto;
  text-align: center;
  border-radius: 20rpx;
  color: white;
}