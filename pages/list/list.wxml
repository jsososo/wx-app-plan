<!--pages/list/list.wxml-->
<view class="container pt_30">
  <navigator url="../piggyBank/index/index?id={{item.id}}" wx:for="{{list}}" wx:key="list-{{index}}">
    <view class="item-box">
      <span class="item-index inline-block">{{index+1}}.</span>
      <span class="item-title">{{item.name}}</span>
    </view>
  </navigator>
  <view class="item-box add-new  br_20 text-center">
    <span class="item-index inline-block"></span>
    <span class="item-title">+ 添加一个新计划</span>
  </view>
</view>