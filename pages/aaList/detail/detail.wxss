/* pages/aaList/detail/detail.wxss */
.base-info {
    border-bottom: 1px solid #ccc;
    box-shadow: #ccc 0 10rpx 20rpx;
    margin-bottom: 40rpx;
}
.title {
    color: #666;
    font-size: 44rpx;
    font-weight: bold;
    padding: 40rpx;
}

.balance-str {
    font-size: 32rpx;
    color: #999;
    padding-left: 40rpx;
    padding-right: 40rpx;
    padding-bottom: 30rpx;
}
.single-user {
    border-radius: 60rpx;
    margin: 30rpx 40rpx;
    border: 1px solid #65abff;
    padding: 20rpx 30rpx 5rpx 30rpx;
}

.list-u-name {
    color: #999;
    font-weight: bold;
    display: inline-block;
    width: 200rpx;
    font-size: 38rpx;
}
.list-total {
    color: #65abff;
    font-weight: bold;
    font-size: 34rpx;
}
.list-add {
    font-weight: bold;
    color: #fff;
    font-size: 36rpx;
    background: #65abff;
    border-radius: 50%;
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    float: right;
}

.btn-more {
    color: #65abff;
    opacity: 0.5;
    text-align: center;
}

.record-list.show {
    max-height: 500rpx;
    overflow: auto;
    width: 610rpx;
}
.record-list.hide {
    height: 0;
    overflow: hidden;
    width: 610rpx;
}
.record-item {
    padding-bottom: 20rpx;
    border-bottom: 1px solid #e6e6e6;
}
.record-item-desc {
    font-size: 30rpx;
    color: #999;
    display: inline-block;
    width: 75%;
    vertical-align: top;
}
.record-item-num {
    font-size: 30rpx;
    color: #3089DC;
    opacity: 0.7;
    width: 25%;
    display: inline-block;
    vertical-align: top;
}
.dialog .input-label {
    display: inline-block;
    width: 30%;
    margin-right: 5%;
    vertical-align: top;
}
.dialog input {
    border-bottom: 1px solid #e6e6e6;
    display: inline-block;
    width: 65%;
    vertical-align: top;
}
.dialog .input-row {
    padding: 20rpx 0;
}

.dialog .input-type {
    width: 50%;
    display: inline-block;
    text-align: center;
    border-bottom: 3px solid transparent;
    transition: 0.5s;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.dialog .input-type.selected {
    border-bottom: 3px solid #65abff;
}
.dialog picker {
    text-align: center;
    width: 65%;
    display: inline-block;
    border-bottom: 1px solid #e6e6e6;
    vertical-align: top;
}