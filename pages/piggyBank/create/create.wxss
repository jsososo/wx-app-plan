/* pages/piggyBank/create/create.wxss */

.container {
  display: block;
  padding: 0;
}

.row {
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx 10rpx;
}

.row:first-child {
  border-top: none;
}

.input-label {
  display: inline-block;
  width: 250rpx;
  text-align: right;
}

.input {
  width: 300rpx;
  display: inline-block;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #999;
}

.input input {
  vertical-align: 20rpx;
}
